<%= form_with method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>
<br>
  <%= form.label :street_address %>
  <%= form.text_field :street_address %><br>
<br>
  <%= form.label :city%>
  <%= form.text_field :city %><br>
<br>
  <%= form.label :state %>
  <%= form.text_field :state %><br>
<br>
  <%= form.label :zipcode %>
  <%= form.number_field :zipcode, step: 1.0%><br>
<br>
  <%= form.label :description, "Why would you make a good home for this pet(s)?" %>
  <%= form.text_field :description %><br>

  <%= form.hidden_field :status, value: "In Progress" %><br>

  <%= form.submit 'Submit' %>
<% end %>